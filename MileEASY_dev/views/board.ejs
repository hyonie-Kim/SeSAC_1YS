        container.classList.add("active")
      })

      arrowBack.addEventListener("click", () =>{
        container.classList.remove("active")
      })

      // 각 요소에 이벤트 
      mbtiBtn.forEach(mbti =>{
        mbti.addEventListener("click",(e)=>{
          const target = e.target
          console.log(mbti,"clicked")
